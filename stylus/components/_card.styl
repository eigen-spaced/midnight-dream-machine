.card-list
  display: grid
  gap: 12px
  grid-column: 1fr
  border-left: 1px solid #c3c3c3


.card
  display: flex
  padding: 0.8rem 3rem 3rem
  gap: 5rem

  @media (max-width: 768px)
    flex-direction: column
    gap: 1rem
  
  &-link
    position: absolute;
    inset: 0; /* Make it cover the whole card */
    z-index: 1; /* Ensure it is clickable */
    text-indent: -9999px; /* Hide the link text */

  &-left
    display: flex
    align-items: center

    .date
      font-weight: light

  &-right
    position: relative
    flex-grow: 1
    display: flex
    gap: 1.2rem
    flex-direction: column

    .title
      font-size: 1.2rem
      font-weight: bold
      color: #fff
      text-decoration: none

      &:hover
        text-decoration: underline

    &__footer
      display: flex
      align-items: center
      justify-content: space-between

      @media (max-width: 768px)
        flex-direction: column
        align-items: flex-start

    .tag-container
      display: flex
      align-items: center

    .tag-list
      display: inline-flex
      gap: 0.7rem

    .tag-item
      color: nord7

.read-more-cta
  position: relative
  display: inline-block

  &::after
    content: ""
    position: absolute
    left: 0
    bottom: 0
    width: 0
    height: 4px
    background: cta-indicator
    transition: width 0.3s ease-out

.card:hover .read-more-cta::after
  width: 100%